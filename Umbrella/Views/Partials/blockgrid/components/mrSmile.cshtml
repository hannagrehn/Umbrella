@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper;

@{
    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents?.FirstOrDefault(x => x.ContentType.Alias == "settingsPage") ?? null;
    var officeLocation  = settings?.Value<string>("officeLocation") ?? ""; 
    var officePhoneNumber = settings?.Value<string>("officePhoneNumber") ?? ""; 
    var officeEmailAddress = settings?.Value<string>("officeEmailAddress") ?? ""; 
     
}

<section id="mr-smile">
    <div class="picture">
        <img src="/" />
                   
    </div>
    <div class="text">
        <div class="location">
            <i class="fa-regular fa-location-dot"></i>
            <div class="info">
                <h5>Office location)</h5>
                <p>@officeLocation</p>            
            </div>
        </div>
        <div class="phone">
            <i class="fa-light fa-phone-flip"></i>
            <div class="info">
                <h5>Phone number)</h5>
                <p>@officePhoneNumber</p>            
            </div>
        </div>
        <div class="email">
            <i class="fa-regular fa-envelope"></i>
            <div class="info">
                <h5>Email address)</h5>
                <p>@officeEmailAddress)</p>     
            </div>
        </div>
    </div>
</section>
