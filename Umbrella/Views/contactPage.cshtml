@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model.Value("pageTitle");
}

<div class="container">
	<h1>@ViewBag.Title</h1>

	<form onsubmit="handleContactFormSubmit(event)" novalidate>
		<div class="form-input-group">
			<label class="form-label" for="name">Name</label>
			<input id="name" name="name" type="text" placeholder="Enter your email address" class="form-input">
			<span class="form-input-error">You must enter your name</span>
		</div>
		<div class="form-input-group">
			<label class="form-label" for="email">Email</label>
			<input id="email" name="email" type="text" placeholder="Enter your email address" class="form-input">
			<span class="form-input-error">You must enter your email</span>
		</div>
		<div class="form-input-group">
			<label class="form-label" for="message">Message</label>
			<input id="message" name="message" type="text" placeholder="Enter your message" class="form-input">
			<span class="form-input-error">You must enter your message</span>
		</div>
		<button type="submit" class=" form-button btn-submit">SEND</button>
	</form>
</div>